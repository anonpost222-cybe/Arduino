{
  "version": 1,
  "author": "GPS Tracker AI",
  "editor": "wokwi",
  "firmware": ".pio/build/esp32doit-devkit-v1/firmware.bin",
  "elf": ".pio/build/esp32doit-devkit-v1/firmware.elf",
  "parts": [
    { "type": "board-esp32-devkit-c-v4", "id": "esp", "top": 0, "left": 0, "attrs": {} },
    { "type": "board-ssd1306", "id": "oled", "top": -80, "left": 50, "attrs": { "i2cAddress": "0x3c" } },
    { "type": "wokwi-potentiometer", "id": "potGPS", "top": 100, "left": -60, "attrs": { "label": "GPS Movement Sim" } },
    { "type": "wokwi-pushbutton", "id": "btnSOS", "top": 100, "left": 80, "attrs": { "color": "red", "label": "SOS CALL" } }
  ],
  "connections": [
    [ "esp:TX", "$serialMonitor:RX", "", [] ],
    [ "esp:RX", "$serialMonitor:TX", "", [] ],
    
    [ "oled:VCC", "esp:3V3", "red", [ "v0" ] ],
    [ "oled:GND", "esp:GND.1", "black", [ "v0" ] ],
    [ "oled:SDA", "esp:21", "purple", [ "v0" ] ],
    [ "oled:SCL", "esp:22", "cyan", [ "v0" ] ],

    [ "potGPS:VCC", "esp:3V3", "red", [ "h-20", "v-50" ] ],
    [ "potGPS:GND", "esp:GND.2", "black", [ "h-20", "v-50" ] ],
    [ "potGPS:SIG", "esp:34", "orange", [ "h20", "v-50" ] ],

    [ "btnSOS:2.l", "esp:GND.2", "black", [ "h0" ] ],
    [ "btnSOS:1.l", "esp:13", "green", [ "h0" ] ]
  ],
  "dependencies": {}
}