{
  "version": 1,
  "author": "Transport AI",
  "editor": "wokwi",
  "firmware": ".pio/build/esp32doit-devkit-v1/firmware.bin",
  "elf": ".pio/build/esp32doit-devkit-v1/firmware.elf",
  "parts": [
    { "type": "board-esp32-devkit-c-v4", "id": "esp", "top": 0, "left": 0, "attrs": {} },
    { "type": "board-ssd1306", "id": "oled", "top": -80, "left": 50, "attrs": { "i2cAddress": "0x3c" } },
    { "type": "wokwi-potentiometer", "id": "pot1", "top": 100, "left": -60, "attrs": { "label": "CO2 Simulator" } },
    { "type": "wokwi-pushbutton", "id": "btnIn", "top": 100, "left": 80, "attrs": { "color": "green", "label": "Passenger IN" } },
    { "type": "wokwi-pushbutton", "id": "btnOut", "top": 100, "left": 200, "attrs": { "color": "red", "label": "Passenger OUT" } },
    { "type": "wokwi-led", "id": "led1", "top": -30, "left": 180, "attrs": { "color": "red", "label": "Warning" } },
    { "type": "wokwi-resistor", "id": "r1", "top": 0, "left": 180, "attrs": { "value": "220" } }
  ],
  "connections": [
    [ "esp:TX", "$serialMonitor:RX", "", [] ],
    [ "esp:RX", "$serialMonitor:TX", "", [] ],
    
    [ "oled:VCC", "esp:3V3", "red", [ "v0" ] ],
    [ "oled:GND", "esp:GND.1", "black", [ "v0" ] ],
    [ "oled:SDA", "esp:21", "purple", [ "v0" ] ],
    [ "oled:SCL", "esp:22", "cyan", [ "v0" ] ],

    [ "pot1:VCC", "esp:3V3", "red", [ "h-20", "v-50" ] ],
    [ "pot1:GND", "esp:GND.2", "black", [ "h-20", "v-50" ] ],
    [ "pot1:SIG", "esp:34", "blue", [ "h20", "v-50" ] ],

    [ "btnIn:2.l", "esp:GND.1", "black", [ "h0" ] ],
    [ "btnIn:1.l", "esp:13", "green", [ "h0" ] ],

    [ "btnOut:2.l", "esp:GND.2", "black", [ "h0" ] ],
    [ "btnOut:1.l", "esp:12", "orange", [ "h0" ] ],

    [ "led1:A", "esp:2", "red", [ "v0" ] ],
    [ "led1:C", "r1:1", "black", [ "v0" ] ],
    [ "r1:2", "esp:GND.3", "black", [ "v0" ] ]
  ],
  "dependencies": {}
}