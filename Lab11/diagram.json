{
  "version": 1,
  "author": "Agro Auto",
  "editor": "wokwi",
  "firmware": ".pio/build/esp32doit-devkit-v1/firmware.bin",
  "elf": ".pio/build/esp32doit-devkit-v1/firmware.elf",
  "parts": [
    { "type": "board-esp32-devkit-c-v4", "id": "esp", "top": 0, "left": 0, "attrs": {} },
    { "type": "board-ssd1306", "id": "oled", "top": -80, "left": 50, "attrs": { "i2cAddress": "0x3c" } },
    { "type": "wokwi-dht22", "id": "dht1", "top": -80, "left": 180, "attrs": {} },
    { "type": "wokwi-potentiometer", "id": "potSoil", "top": 100, "left": -60, "attrs": { "label": "Soil Moisture" } },
    { "type": "wokwi-relay-module", "id": "relay1", "top": 100, "left": 80, "attrs": {} },
    { "type": "wokwi-servo", "id": "servo1", "top": 180, "left": 80, "attrs": {} },
    { "type": "wokwi-led", "id": "ledErr", "top": -30, "left": 180, "attrs": { "color": "red", "label": "Error" } },
    { "type": "wokwi-resistor", "id": "r1", "top": 0, "left": 180, "attrs": { "value": "220" } }
  ],
  "connections": [
    [ "esp:TX", "$serialMonitor:RX", "", [] ],
    [ "esp:RX", "$serialMonitor:TX", "", [] ],
    
    [ "oled:VCC", "esp:3V3", "red", [ "v0" ] ],
    [ "oled:GND", "esp:GND.1", "black", [ "v0" ] ],
    [ "oled:SDA", "esp:21", "purple", [ "v0" ] ],
    [ "oled:SCL", "esp:22", "cyan", [ "v0" ] ],

    [ "dht1:VCC", "esp:3V3", "red", [ "v0" ] ],
    [ "dht1:GND", "esp:GND.2", "black", [ "v0" ] ],
    [ "dht1:SDA", "esp:15", "green", [ "v0" ] ],

    [ "potSoil:VCC", "esp:3V3", "red", [ "h-20", "v-50" ] ],
    [ "potSoil:GND", "esp:GND.3", "black", [ "h-20", "v-50" ] ],
    [ "potSoil:SIG", "esp:34", "orange", [ "h20", "v-50" ] ],

    [ "relay1:VCC", "esp:5V", "red", [ "v0" ] ],
    [ "relay1:GND", "esp:GND.2", "black", [ "v0" ] ],
    [ "relay1:IN", "esp:2", "blue", [ "v0" ] ],

    [ "servo1:V+", "esp:5V", "red", [ "v0" ] ],
    [ "servo1:GND", "esp:GND.3", "black", [ "v0" ] ],
    [ "servo1:PWM", "esp:13", "yellow", [ "v0" ] ],

    [ "ledErr:A", "esp:4", "red", [ "v0" ] ],
    [ "ledErr:C", "r1:1", "black", [ "v0" ] ],
    [ "r1:2", "esp:GND.3", "black", [ "v0" ] ]
  ],
  "dependencies": {}
}